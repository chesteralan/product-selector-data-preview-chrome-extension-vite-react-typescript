{
  "name": "product-selector-data-preview-chrome",
  "description": "Product Selector Preview",
  "private": true,
  "version": "1.0.25",
  "type": "module",
  "scripts": {
    "dev": "vite --config app.config.ts",
    "dev-options": "vite --config options.config.ts",
    "build": "concurrently \"tsc && vite --config app.config.ts build --watch\" \"tsc && vite --config options.config.ts build --watch\" \"node manifest.cjs\"",
    "export": "tsc && vite --config app.config.ts build",
    "export-options": "tsc && vite --config options.config.ts build",
    "preview": "vite preview",
    "manifest": "node manifest.cjs",
    "zip": "yarn export && yarn export-options && yarn manifest && node archive.cjs",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.209",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "archiver": "^6.0.1",
    "concurrently": "^8.2.2",
    "prettier": "3.1.0",
    "typescript": "^4.9.3",
    "vite": "^4.0.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
